{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/ui/*"],
      "@reducers/*": ["./src/reducers/*"],
      "@actions/*": ["./src/actions/*"],
      "@api/*": ["./src/api/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@store/*": ["./src/store/*"],
      "@saga/*": ["./src/sagas/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@loaders/*": ["./src/loaders/*"]
    },
    "lib": ["dom", "es5", "es6", "es7", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ]
}
